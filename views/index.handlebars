 <div class="flex-center">
    <div>
        <h1>Burgers</h1>
    </div>
</div>
<div class="flex-center">
    <div class="float-left margin-1 border-1 padding-1">
        <h2>Burgers that are not devoured!</h2>

        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
            {{/unless}}
        {{/each}}
        </ul>
    </div>
    <div class="float-right margin-1 border-1 padding-1">
        <h2>Burgers that are Devoured!</h2>

        <ul>
        {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devour=false}}
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>
<div class="flex-center">
    <div>
        <h2>Add a Burger</h2>
        <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>
        
        <button type="submit">Add Burger</button>
        </form>
    </div>
</div>





